                                      {
                                       "id": {{event.codeSeance}},
                                       {% if event.heureSeance|length == 3 %}
                                       "start": new Date("{{event.dateSeance|slice(0, 4)}}", "{{event.dateSeance|slice(5, 2) - 1}}", "{{event.dateSeance|slice(8, 2)}}", "{{event.heureSeance|slice(0, 1)}}", "{{event.heureSeance|slice(1, 2)}}"),
                                       "end": new Date("{{event.dateSeance|slice(0, 4)}}", "{{event.dateSeance|slice(5, 2) - 1}}", "{{event.dateSeance|slice(8, 2)}}", "{{event.heureSeance|slice(0, 1) + event.dureeSeance|slice(0, 1)}}", "{{event.heureSeance|slice(1, 2) + event.dureeSeance|slice(1, 2)}}"),
                                       {% else %}
