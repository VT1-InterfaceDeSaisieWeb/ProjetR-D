		<script>
				function listBlockVisibility(blockId1, blockId2){
		
					var targetBlock = document.getElementById(blockId1);
					var tmp = document.getElementById(blockId2);
                                        var blurred = document.getElementById("blurred");

						if (targetBlock.style.display == "block"){
							
                                                        targetBlock.style.transition = "all 2s";
                                                        targetBlock.style.opacity = "1";
                                                        targetBlock.style.zIndex = "3000";
                                                     
                                                        
                                                        tmp.style.opacity = "0";
                                                        tmp.style.zIndex = "0";
                                                        
                             
							
                                                        
                                                        blurred.style.transition = "all 2s";
                                                        blurred.style.backgroundColor = "black";
                                                        blurred.style.opacity = "0.2";
                                                        
						}
				}
                                
                                
                                
                               
		</script>
		
